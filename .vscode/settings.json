{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"hide-files.files": [],
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#c31498",
		"activityBar.background": "#c31498",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#87ad12",
		"activityBarBadge.foreground": "#15202b",
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#c31498",
		"statusBar.background": "#950f74",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#c31498",
		"statusBarItem.remoteBackground": "#950f74",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#950f74",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#950f7499",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
	"peacock.color": "#950f74",

	// Use Biome as default formatter
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "always"
	},

	// Recommended editor behaviors
	"files.eol": "\n", // Always LF
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,

	// Let Biome handle linting instead of ESLint
	"eslint.enable": false,
	"biome.enabled": true,
	"biome.configurationPath": "biome.json",

	// Indent setting
	"editor.tabSize": 2,
	"editor.indentSize": "tabSize",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,

	"editor.wordWrap": "on",

	"editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.allowVariableFontsInAccessibilityMode": true,

	"files.associations": {
		"env-sample": "dotenv",
		"web.config": "xml",
		"web.local.config": "xml"
	},

	"git.autofetchPeriod": 180,

	// Optional: tailor formatting
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
